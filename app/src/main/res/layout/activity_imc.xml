<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imc">

    <View
        android:id="@+id/view10"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:background="#FFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

    <View
        android:id="@+id/view9"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:background="#F44336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <View
        android:id="@+id/view8"
        android:layout_width="80dp"
        android:layout_height="19dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="15dp"
        android:background="#F57F17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view10" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Califica tu ejercicio"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAltura2" />

    <Button
        android:id="@+id/button"
        android:layout_width="305dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_buttom"
        android:onClick="home"
        android:text="Finalizar"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/ratingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="245dp"
        android:layout_height="44dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="87dp"
        android:layout_height="34dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:text="@string/nombreUsuario"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pesoBajo"
        android:layout_width="88dp"
        android:layout_height="26dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="12dp"
        android:text="@string/pesoBajo"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/tuimc" />

    <TextView
        android:id="@+id/obesidadM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="10dp"
        android:text="@string/obesidadM"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view9"
        app:layout_constraintTop_toBottomOf="@+id/obesidad" />

    <TextView
        android:id="@+id/tuimc"
        android:layout_width="187dp"
        android:layout_height="21dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:text="@string/tuimc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuario" />

    <TextView
        android:id="@+id/obesidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="10dp"
        android:text="@string/obesidad"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view8"
        app:layout_constraintTop_toBottomOf="@+id/sobrepeso" />

    <TextView
        android:id="@+id/sobrepeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="10dp"
        android:text="@string/sobrepeso"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view10"
        app:layout_constraintTop_toBottomOf="@+id/normal" />

    <TextView
        android:id="@+id/normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="10dp"
        android:text="@string/normal"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view7"
        app:layout_constraintTop_toBottomOf="@+id/pesoBajo" />

    <View
        android:id="@+id/view5"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:background="#0277BD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tuimc" />

    <View
        android:id="@+id/view7"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:background="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <TextView
        android:id="@+id/tvPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Peso"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAltura2"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toBottomOf="@+id/view9"
        app:layout_constraintVertical_bias="0.717" />

    <TextView
        android:id="@+id/tvAltura2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="362dp"
        android:layout_marginBottom="124dp"
        android:text="Altura"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPeso"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="#00000000"
        android:editable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintStart_toEndOf="@+id/tvPeso"
        app:layout_constraintTop_toBottomOf="@+id/obesidadM" />

    <EditText
        android:id="@+id/txtAltura"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/tvAltura2"
        app:layout_constraintTop_toBottomOf="@+id/txtPeso" />

</androidx.constraintlayout.widget.ConstraintLayout>